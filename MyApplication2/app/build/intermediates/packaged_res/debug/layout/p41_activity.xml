    android:padding="100dp"
    android:layout_gravity="center"
    android:background="@color/not"/>
    <ImageView
        android:id="@+id/apple"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/apple_svg"
        />


</LinearLayout>